void notifyClients() {
  ws.textAll(time_stamp);
}

void handleWebSocketMessage(void *arg, uint8_t *data, size_t len) {
  AwsFrameInfo *info = (AwsFrameInfo*)arg;
  if (info->final && info->index == 0 && info->len == len && info->opcode == WS_TEXT) {
    data[len] = 0;
    if (strcmp((char*)data, "toggle") == 0) {
      ledState = !ledState;
      now = rtc.now();
      time_stamp = "";
      if (String(now.hour(), DEC).length() < 2) {
        time_stamp += "0" + String(now.hour(), DEC);
      } else {
        time_stamp += String(now.hour(), DEC);
      } time_stamp += ":";
      if (String(now.minute(), DEC).length() < 2) {
        time_stamp += "0" + String(now.minute(), DEC);
      } else {
        time_stamp += String(now.minute(), DEC);
      } time_stamp += ":";
      if (String(now.second(), DEC).length() < 2) {
        time_stamp += "0" + String(now.second(), DEC);
      } else {
        time_stamp += String(now.second(), DEC);
      } time_stamp += "Z";
      Serial.print(now.hour(), DEC);
      Serial.print(':');
      Serial.print(now.minute(), DEC);
      Serial.print(':');
      Serial.print(now.second(), DEC);
      Serial.println();
      notifyClients();
    }
  }
}

void onEvent(AsyncWebSocket *server, AsyncWebSocketClient *client, AwsEventType type,
             void *arg, uint8_t *data, size_t len) {
  switch (type) {
    case WS_EVT_CONNECT:
      Serial.printf("WebSocket client #%u connected from %s\n", client->id(), client->remoteIP().toString().c_str());
      break;
    case WS_EVT_DISCONNECT:
      Serial.printf("WebSocket client #%u disconnected\n", client->id());
      break;
    case WS_EVT_DATA:
      handleWebSocketMessage(arg, data, len);
      break;
    case WS_EVT_PONG:
    case WS_EVT_ERROR:
      break;
  }
}

void initWebSocket() {
  ws.onEvent(onEvent);
  server.addHandler(&ws);
}

String processor(const String& var){
